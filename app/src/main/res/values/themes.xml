<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cloudy" parent="Theme.AppCompat.Light.DarkActionBar">
       <item name="colorPrimary">#61A4AA</item>
    </style>

    <style name="Base.Theme.Cloudy.ActionBar.Transparent" parent="Base.Theme.Cloudy">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>


    <style name="Theme.Cloudy" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>

    </style>


    <style name="Theme.Cloudy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Cloudy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>