<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/cl"
    tools:context=".settings.SettingsFragment">



  <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
       android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="50dp">

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="20dp"
          android:layout_marginStart="12dp"
          android:src="@drawable/location"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/locationsettings"
          android:textSize="20dp"
          android:textColor="@color/black"
          android:layout_marginTop="23dp"
          android:layout_marginStart="60dp" />

    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="240dp"
        segmentedgroup:sc_tint_color="@color/md_cyan_900"
        android:orientation="horizontal"

        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
            android:id="@+id/button_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gps"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            style="@style/RadioButton" />
    </info.hoang8f.android.segmented.SegmentedGroup>

  </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/language"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginStart="60dp" />

        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="240dp"
            segmentedgroup:sc_tint_color="@color/md_cyan_900"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp">

            <RadioButton
                android:id="@+id/button_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eng"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ar"
                style="@style/RadioButton" />
        </info.hoang8f.android.segmented.SegmentedGroup>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="250dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/windicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wind_speed"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginStart="60dp" />

        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="240dp"
            segmentedgroup:sc_tint_color="@color/md_cyan_900"
            android:orientation="horizontal"

            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp">

            <RadioButton
                android:id="@+id/button_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/m_s"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/m_hr"
                style="@style/RadioButton" />
        </info.hoang8f.android.segmented.SegmentedGroup>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="350dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/fahrenheit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginStart="60dp" />

        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="170dp"
            segmentedgroup:sc_tint_color="@color/md_cyan_900"
            android:orientation="horizontal"

            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp">

            <RadioButton
                android:id="@+id/button_celsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/celsius"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button_kelvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/kelvin"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/button_fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/fahrenheit"
                style="@style/RadioButton" />
        </info.hoang8f.android.segmented.SegmentedGroup>

    </androidx.cardview.widget.CardView>

</FrameLayout>