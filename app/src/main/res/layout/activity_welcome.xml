<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_create_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:layout_above="@id/bottom_navigation" />

        <RelativeLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal"
            android:background="@color/md_white_1000"
            android:layout_alignParentBottom="true">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/pageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:tabBackground="@drawable/onboarding_viewpager_selector_orange"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />


  <!--          <Button
                android:id="@+id/btn_previous_step"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/btn_orange_rounded_pressed"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textColor="@color/md_amber_50" />-->

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/btn_grey_rounded_pressed"
                android:gravity="center"
                android:text="@string/next"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000" />

        </RelativeLayout>


    </RelativeLayout>
